{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "no-unused-expression": true
  },
  "rules": {
    "comment-format": [
      true,
      "check-space"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "member-access": [
      false
    ],
    "ordered-imports": [
      false
    ],
    "max-line-length": [
      true,
      160
    ],
    "member-ordering": [
      false
    ],
    "interface-name": [
      false
    ],
    "arrow-parens": false,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "no-duplicate-variable": true,
    "no-internal-module": true,
    "object-literal-sort-keys": false,
    "no-empty": false,
    "no-trailing-whitespace": true,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-operator",
      "check-typecast",
      "check-module",
      "check-preblock",
      "check-postbrace"
    ],
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "request|appController|^_"
      }
    ],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-snake-case",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    }
  },
  "rulesDirectory": []
}
